      <div class="col-md-6 col-xxl-6">
        <div class="bootstrap_chat">
          <div class="container py-5 px-4">
            <!-- For demo purpose-->
            <header class="text-center">
              <h1 style="margin-top:-6%;font-size:20px;color:white;">Chat Global</h1>
            </header>
