                  <input type="text" id="mensaje" placeholder="Type a message" aria-describedby="button-addon2"
                    class="form-control rounded-0 border-0 py-4 bg-light">
                  <div class="input-group-append ">


                    <input type="text" hidden id="usuario" placeholder="Usuario" class="text-success"
                      value="<%=nombre%>" />
                    <button id="enviar" type="submit" class="btn btn-link"> <i class="fa fa-paper-plane"></i></button>
                  </div>
                </div>
              </form>

